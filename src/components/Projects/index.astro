---
import { Image } from "astro:assets";
import Heading from "@components/Heading/index.astro";
import projectsShape from "@assets/icons/projects-shape.svg";
import { type Project, PROJECTS } from "@constants/index";
import CardProject from "@components/Card/CardProject.astro";
---

<section id="projects" class="container py-16">
  <Heading
    emoji="ðŸš€"
    headline="My Projects"
    subheadline="Showcasing my creativity and skills in web creation"
    position="left"
  />

  <div
    class="relative mt-12 flex w-full flex-col items-center justify-center gap-10"
  >
    <Image
      src={projectsShape}
      alt="projects shape"
      class="absolute -right-[100px] -top-[100px] -z-10 blur-[80px] md:-right-[150px] md:-top-[150px]"
